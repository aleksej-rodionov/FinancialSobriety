<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/tv_sum"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:text="Категория" />

        <TextView
            android:id="@+id/tv_date"

            android:textSize="16sp"
            android:textStyle="italic"
            tools:text="03.02.1991"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_category"
            android:layout_alignParentStart="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tv_comment"
            android:maxLines="3"
            tools:text="Комментарий"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_date"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_date"
            android:layout_alignBottom="@id/tv_date"
            android:textAlignment="viewEnd"
            />

        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_category"
            android:layout_alignBottom="@id/tv_category"
            tools:text="0.00"
            android:textAlignment="viewEnd"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="italic" />



    </RelativeLayout>

</RelativeLayout>